px2rem(value)
    return (value / 75) rem

px2px(name, value)
    {name} round(0.5 * value) px

/**
 * 清除浮动
 */
clearfix()
    &:before,
    &:after
        content " "
        display table

    &:after
        clear both

    zoom 1

/**
 * 文本结尾加省略号
 */
text-overflow()
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

/**
 * 文本自然换行
 */
word-break()
    word-break break-all
    word-wrap break-word
    white-space normal

/**
 * 居中定位
 */
center(way)
    position way
    left 50%
    top 50%
    transform translate(-50%, -50%)



